<?xml version="1.0"?>
<telemetryd-config>
  <protocol name="JTI" description="Junos Telemetry Interface (JTI)">
    <listener name="JTI-UDP-50000" class-name="org.opennms.netmgt.collection.streaming.udp.UdpListener">
      <parameter key="port" value="50000"/>
    </listener>

    <package name="JTI-Default">
      <filter>IPADDR != '0.0.0.0'</filter>
      <rrd step="300">
        <rra>RRA:AVERAGE:0.5:1:2016</rra>
        <rra>RRA:AVERAGE:0.5:12:1488</rra>
        <rra>RRA:AVERAGE:0.5:288:366</rra>
        <rra>RRA:MAX:0.5:288:366</rra>
        <rra>RRA:MIN:0.5:288:366</rra>
      </rrd>

      <adapter name="JTI-GPB" class-name="org.opennms.netmgt.collection.streaming.jti.JtiGpbAdapter">
        <parameter key="script" value="${install.dir}/etc/telemetryd-adapters/junos-telemetry-interface.groovy" />
      </adapter>
    </package>
  </protocol>
</telemetryd-config>
